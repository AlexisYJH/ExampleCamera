<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/btn_surfaceview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/surface_view_preview_camera"/>

    <Button
        android:id="@+id/btn_textureview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texture_view_preview_camera"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_nv21data_callback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nv21data_callback"
        android:layout_marginTop="10dp"/>

</LinearLayout>